<body>
<div id="container">
  <img id="woodshop" src="woodshop.jpg" alt="Woodshop">

  <!-- Example banners -->
  <div class="banner" data-minzoom="1.5" style="top:20%; left:25%;" onclick="alert('Tools!')">Tools</div>
  <div class="banner" data-minzoom="2.0" style="top:60%; right:20%;" onclick="alert('Projects!')">Projects</div>
  <div class="banner" data-minzoom="2.5" style="bottom:15%; left:40%;" onclick="alert('Gallery!')">Gallery</div>
</div>

<script>
let zoom = 1;
const minZoom = 1;
const maxZoom = 4;

window.addEventListener("wheel", e => {
  e.preventDefault();

  zoom += e.deltaY * -0.001;
  zoom = Math.min(Math.max(minZoom, zoom), maxZoom);

  document.getElementById("woodshop").style.transform = `scale(${zoom})`;

  document.querySelectorAll(".banner").forEach(banner => {
    let minZoom = parseFloat(banner.dataset.minzoom);
    if (zoom >= minZoom) {
      banner.classList.add("visible");
    } else {
      banner.classList.remove("visible");
    }
  });
}, { passive: false });

// Optional: block arrow keys, space, PgUp/PgDn from scrolling
window.addEventListener("keydown", e => {
  if (["ArrowUp","ArrowDown","PageUp","PageDown"," "].includes(e.key)) {
    e.preventDefault();
  }
});
</script>
</body>
</html>
